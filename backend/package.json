{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "code:check": "npm run lint && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format",
    "docker:build": "docker build -t paymentology-backend .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t paymentology-backend:dev .",
    "docker:run": "docker run -p 5001:5001 paymentology-backend",
    "docker:run:dev": "docker run -p 5001:5001 -v $(pwd):/app paymentology-backend:dev",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:check": "bash scripts/docker-check.sh"
  },
  "keywords": [
    "express",
    "api",
    "payments",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "description": "Paymentology Express.js backend API with TypeScript",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
